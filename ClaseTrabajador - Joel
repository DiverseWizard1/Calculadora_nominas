package ClasesNominas;

import calcular.Pedir;
import Sleer1.SLeer1;

/**
 *
 * @author Joel Andreu 1CFS J
 */
public class Trabajador {
    
    //Datos del trabajador
    private String nif;         //NIF
    private int numss;          //Numero de afiliación de la seguridad social
    private char gProf;         //Grupo Profesional
    //private String gCoti;     //Grupo cotización, no es para la v1
    //private String fAntig;    //Fecha de antigüedad, no es para la v1
    private short nProf;        //Nivel profesional
    private short aProf;        //Area profesional

    //Método constructor
    public Trabajador(String dni, int nss, char grup, short nivp, short areap){
    
        nif = dni;
        numss = nss;
        gProf = grup;
        nProf = nivp;
        aProf = areap;
    }
    
    //Métodos getter y setter
    public String getNif() {
        return nif;
    }
    
    public void setNif(String n){
        nif = n;
    }

    public int getNumss() {
        return numss;
    }
    
    public void setNumss(int n){
        numss = n;
    }

    public char getgProf() {
        return gProf;
    }
    
    public void setgProf(char c){
        gProf = c;
    }
    
    public short getnProf(){
        return nProf;
    }
    
    public void setnProf(short n){
        nProf = n;
    }
    
    public short getaProf(){
        return aProf;
    }
    
    public void setaProf(short a){
        aProf = a;
    }

    /*No son para la versión1
    
        public String getgCoti() {
            return gCoti;
        }
    
        public void setgCoti(String g){
            gCoti = g;
        }

        public String getfAntig() {
            return fAntig;
        }
    
        public void setfAntig(String f){
            fAntig = f;
        }*/
    
}
